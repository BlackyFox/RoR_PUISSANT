<h1>Liste des jeux</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Image</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td nowrap bgcolor="#d8d8d8" align=center><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= image_tag(game.picture_url, :width => 80) if game.picture.present? %></td>
        <td align=center><%= game.mark %></td>
        <td><%= link_to 'Plus de dÃ©tails', game %></td>
        <td><%= link_to 'Editer', edit_game_path(game) %></td>
        <td><%= link_to 'Supprimer', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

